{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "resolveJsonModule": true,

    // This is here due to type errors in the chakra .d.ts file
    // See: https://github.com/chakra-ui/chakra-ui/issues/7203
    "skipLibCheck": true,

    "esModuleInterop": true,
    "target": "ES2015",
    "strict": true
  }
}
